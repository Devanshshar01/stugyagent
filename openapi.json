{
  "openapi": "3.1.0",
  "info": {
    "title": "Study Concierge Agent API",
    "version": "1.0.0"
  },
  "servers": [{"url": "https://your-domain.com"}],
  "paths": {
    "/v1/plan/create": {
      "post": {
        "summary": "Create a study plan",
        "operationId": "create_plan",
        "responses": {
          "200": {
            "description": "Study plan created successfully",
            "content": {
              "application/json": {
                "schema": {"type": "object"}
              }
            }
          }
        }
      }
    },
    "/v1/session/start": {
      "post": {
        "summary": "Start a study session",
        "operationId": "start_session",
        "responses": {
          "200": {
            "description": "Session started",
            "content": {
              "application/json": {
                "schema": {"type": "object"}
              }
            }
          }
        }
      }
    },
    "/v1/content/generate": {
      "post": {
        "summary": "Generate quizzes, summaries, or flashcards",
        "operationId": "generate_content",
        "responses": {
          "200": {
            "description": "Generated content",
            "content": {
              "application/json": {
                "schema": {"type": "object"}
              }
            }
          }
        }
      }
    },
    "/v1/progress/{user_id}": {
      "get": {
        "summary": "Fetch progress analytics",
        "operationId": "get_progress",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {"type": "string"}
          },
          {
            "name": "period",
            "in": "query",
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "Progress data",
            "content": {
              "application/json": {
                "schema": {"type": "object"}
              }
            }
          }
        }
      }
    }
  }
}
